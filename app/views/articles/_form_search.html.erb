<div class="container" style="width: 100%">
  <%= form_tag '/articles/search' do %>
      <div class="row">
        <div class="col-sm-10">
          <div class="form-group">
            <%= text_field_tag :title, nil, placeholder: "Your title", class: "form-control" %>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="actions">
            <%= submit_tag "Search", class: "btn btn-primary active", style: "width: 100%" %>
          </div>
        </div>
      </div>
  <% end %>
</div>