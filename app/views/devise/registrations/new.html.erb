<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2 class="main-title">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'shared/devisemess' %>

        <div class="form-group">
          <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email' %>
        </div>

        <div class="form-group">
          <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password (at least 8 characters)', autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirmation', autocomplete: "off" %>
          <br/>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class => "btn btn-primary active" %>
        </div>
    <% end %>
  </div>
</div>